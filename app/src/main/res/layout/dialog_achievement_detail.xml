                        android:textSize="@dimen/text_value_dialog"
                        android:textColor="@color/colorBlack"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:padding="@dimen/pading_detail_with_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_marginEnd="@dimen/margin_icon_with_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_penyelenggara"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/penyelenggara"
                        android:textSize="@dimen/dialog_mini_title"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/tv_penyelenggara"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/penyelenggara"
                        android:textSize="@dimen/text_value_dialog"
                        android:textColor="@color/colorBlack"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:padding="@dimen/pading_detail_with_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_marginEnd="@dimen/margin_icon_with_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_jabatan"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/jabatan"
                        android:textSize="@dimen/dialog_mini_title"
                        android:textColor="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/tv_jabatan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/jabatan"
                        android:textSize="@dimen/text_value_dialog"
                        android:textColor="@color/colorBlack"/>

                </LinearLayout>

            </LinearLayout>

