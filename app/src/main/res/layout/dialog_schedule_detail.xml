<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/dialog_background_center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="6dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_seminar"
                android:background="@drawable/logo_gradient_background"
                android:padding="15dp"/>

            <TextView
                android:id="@+id/tv_nama_mata_kuliah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Mata Kuliah"/>

            <TextView
                android:id="@+id/tv_kode_mata_kuliah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kode Mata Kuliah"/>

            <TextView
                android:id="@+id/tv_jenis_mata_kuliah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Mata Kuliah"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>