<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent3"
    android:layout_gravity="center"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PresenceBimbinganFragment">

<!--Code dimodifikasi dari code Megi Aji Pangestu (1617051124)-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutBimbingan"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/frameLayout2"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/bg_item_grafik"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/item_cd_usul"
            android:layout_width="match_parent"
            app:cardElevation="0dp"
            app:cardCornerRadius="20dp"
            android:layout_height="65dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="40dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="false"
            app:cardBackgroundColor="@color/semi_transparent_40"
            app:layout_constraintBottom_toTopOf="@id/item_cd_hasil"
            app:layout_constraintTop_toTopOf="@+id/frameLayout2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_list_usul"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/img_grafik_usul"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:contentDescription="@string/todo" />

                <TextView
                    android:id="@+id/tv_list_usul"
                    android:layout_width="0dp"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:text="@string/seminar_usul"
                    android:textColor="@color/colorWhite"
                    app:layout_constraintStart_toEndOf="@+id/img_list_usul"
                    app:layout_constraintTop_toTopOf="@+id/img_list_usul" />

                <TextView
                    android:id="@+id/tv_date_usul"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/tanggal"
                    android:textColor="@color/colorWhite"
                    app:layout_constraintBottom_toBottomOf="@+id/img_list_usul"
                    app:layout_constraintStart_toEndOf="@+id/img_list_usul"
                    app:layout_constraintTop_toBottomOf="@+id/tv_list_usul" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/view_detail_usul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    app:layout_constraintBottom_toBottomOf="@+id/img_list_usul"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/img_list_usul">

                    <ImageView
                        android:id="@+id/imageView_detail_usul"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="50dp"
                        android:src="@drawable/ic_assignment_white_24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_detail_usul"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/detail"
                        android:textColor="@color/colorWhite"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/imageView_detail_usul"
                        app:layout_constraintStart_toEndOf="@+id/imageView_detail_usul"
                        app:layout_constraintTop_toBottomOf="@+id/imageView_detail_usul" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/item_cd_hasil"
            android:layout_width="match_parent"
            app:cardElevation="0dp"
            app:cardCornerRadius="20dp"
            android:layout_height="65dp"
            app:cardBackgroundColor="@color/semi_transparent_40"
            android:layout_marginStart="55dp"
            android:layout_marginEnd="40dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="false"
            app:layout_constraintBottom_toTopOf="@id/item_cd_kompre"
            app:layout_constraintTop_toBottomOf="@+id/item_cd_usul">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_list_hasil"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/img_grafik_hasil"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:contentDescription="@string/todo" />

                <TextView
                    android:id="@+id/tv_list_hasil"
                    android:layout_width="0dp"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:text="@string/seminar_hasil"
                    android:textColor="@color/colorWhite"
                    app:layout_constraintStart_toEndOf="@+id/img_list_hasil"
                    app:layout_constraintTop_toTopOf="@+id/img_list_hasil" />

                <TextView
                    android:id="@+id/tv_date_hasil"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/tanggal"
                    android:textColor="@color/colorWhite"
                    app:layout_constraintBottom_toBottomOf="@+id/img_list_hasil"
                    app:layout_constraintStart_toEndOf="@+id/img_list_hasil"
                    app:layout_constraintTop_toBottomOf="@+id/tv_list_hasil" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/view_detail_hasil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/img_list_hasil"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/img_list_hasil">

                    <ImageView
                        android:id="@+id/imageView_detail_hasil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="50dp"
                        android:src="@drawable/ic_assignment_white_24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_jml_hasil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/detail"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/imageView_detail_hasil"
                        app:layout_constraintStart_toEndOf="@+id/imageView_detail_hasil"
                        app:layout_constraintTop_toBottomOf="@+id/imageView_detail_hasil" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/item_cd_kompre"
            android:layout_width="match_parent"
            app:cardElevation="0dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/semi_transparent_40"
            android:layout_height="65dp"
            android:layout_marginStart="55dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="40dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="false"
            app:layout_constraintBottom_toBottomOf="@id/frameLayout2"
            app:layout_constraintTop_toBottomOf="@+id/item_cd_hasil">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_list_kompre"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/img_grafik_kompre"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:contentDescription="@string/todo" />

                <TextView
                    android:id="@+id/tv_list_kompre"
                    android:layout_width="0dp"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:text="@string/komprehensif"
                    android:textColor="@color/colorWhite"
                    app:layout_constraintStart_toEndOf="@+id/img_list_kompre"
                    app:layout_constraintTop_toTopOf="@+id/img_list_kompre" />

                <TextView
                    android:id="@+id/tv_date_kompre"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/tanggal"
                    android:textColor="@color/colorWhite"
                    app:layout_constraintBottom_toBottomOf="@+id/img_list_kompre"
                    app:layout_constraintStart_toEndOf="@+id/img_list_kompre"
                    app:layout_constraintTop_toBottomOf="@+id/tv_list_kompre" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/view_detail_kompre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/img_list_kompre"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/img_list_kompre">

                    <ImageView
                        android:id="@+id/imageView_detail_kompre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="50dp"
                        android:src="@drawable/ic_assignment_white_24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_jml_kompre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/detail"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/imageView_detail_kompre"
                        app:layout_constraintStart_toEndOf="@+id/imageView_detail_kompre"
                        app:layout_constraintTop_toBottomOf="@+id/imageView_detail_kompre" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <FrameLayout
            android:id="@+id/frameLayout3"
            android:layout_width="5dp"
            android:layout_height="0dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="55dp"
            android:background="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="@id/frameLayout2"
            app:layout_constraintStart_toStartOf="@id/frameLayout2"
            app:layout_constraintTop_toTopOf="@+id/frameLayout2" />

        <ImageView
            android:id="@+id/circle_top"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:background="@drawable/ic_circle_white"
            app:layout_constraintEnd_toEndOf="@+id/frameLayout3"
            app:layout_constraintStart_toStartOf="@+id/frameLayout3"
            app:layout_constraintTop_toTopOf="@+id/frameLayout3"
            android:contentDescription="@string/todo" />

        <ImageView
            android:id="@+id/circle_mid"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/ic_circle_white"
            app:layout_constraintEnd_toEndOf="@+id/frameLayout3"
            app:layout_constraintStart_toStartOf="@+id/frameLayout3"
            app:layout_constraintTop_toTopOf="@+id/frameLayout3"
            app:layout_constraintBottom_toBottomOf="@id/frameLayout3"
            android:contentDescription="@string/todo" />

        <ImageView
            android:id="@+id/circle_bot"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@drawable/ic_circle_white"
            app:layout_constraintEnd_toEndOf="@+id/frameLayout3"
            app:layout_constraintStart_toStartOf="@+id/frameLayout3"
            app:layout_constraintBottom_toBottomOf="@id/frameLayout3"
            android:contentDescription="@string/todo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/data_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/data_kosong"
        android:visibility="gone"
        android:textColor="@color/colorWhite"
        android:layout_gravity="center"
        android:gravity="center"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"/>

</LinearLayout>