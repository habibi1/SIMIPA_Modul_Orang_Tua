<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_access_time_softblue"/>

            <TextView
                android:id="@+id/tv_jam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="3dp"
                android:text="@string/time_schedule"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/line_vertical"/>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            app:cardElevation="0dp"
            android:layout_margin="3dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/line_schedule"
                    android:scaleType="fitXY"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/line_schedule"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:padding="6dp">

                    <TextView
                        android:id="@+id/tv_schedule"
                        android:paddingStart="6dp"
                        android:layout_margin="@dimen/margin_text_in_item"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/padding_drawable_with_text_in_item"
                        android:gravity="center_vertical"
                        android:drawableStart="@drawable/ic_books_soft_blue"
                        android:text="@string/nama_jadwal" />

                    <TextView
                        android:id="@+id/tv_place"
                        android:paddingStart="6dp"
                        android:layout_margin="@dimen/margin_text_in_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/padding_drawable_with_text_in_item"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorBlack"
                        android:drawableStart="@drawable/ic_place_soft_blue"
                        android:text="@string/tempat" />

                    <TextView
                        android:id="@+id/tv_lecture"
                        android:paddingStart="6dp"
                        android:layout_margin="@dimen/margin_text_in_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/padding_drawable_with_text_in_item"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorBlack"
                        android:drawableStart="@drawable/ic_person_soft_blue"
                        android:text="@string/nama_dosen" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:srcCompat="@drawable/line_horizontal"
        tools:ignore="MissingConstraints"
        android:scaleType="fitXY"/>

</LinearLayout>